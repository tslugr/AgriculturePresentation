@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Listesi</h4>

            <div class="table-responsive">
                @if (Model.Count != 0)
                {


                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Ad Soyad
                                </th>
                                <th>
                                    Mail
                                </th>
                                <th>
                                    Tarih
                                </th>
                                <th>
                                    Mesajı Gör
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/template/images/faces/face1.jpg" alt="image" />
                                    </td>
                                    <td>
                                        @item.ContactID
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Mail
                                    </td>
                                    <td>
                                        <a href="/Contact/MessageDetails/@item.ContactID" class="btn btn-outline-primary">Mesajı Gör</a>
                                    </td>
                                 
                                </tr>
                            }


                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Hiç Mesaj Yok
                       
                    </div>
                }
                <br />
         
            </div>
        </div>
    </div>
</div>

