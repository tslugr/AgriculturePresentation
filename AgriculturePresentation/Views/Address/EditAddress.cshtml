@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Address Düzenleme</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x => x.AddressID)
                    <label for="exampleInputName1">Açıklama 1</label>
                    <span asp-validation-for="Description1" class="text-danger"></span>
                    <input type="text" asp-for="Description1" class="form-control" id="exampleInputName1" placeholder="Açıklama 1">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 2</label>
                    <span asp-validation-for="Description2" class="text-danger"></span>
                    <input type="text" asp-for="Description2" class="form-control" id="exampleInputName2" placeholder="Açıklama 2">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama 3</label>
                    <span asp-validation-for="Description3" class="text-danger"></span>
                    <input type="text" asp-for="Description3" class="form-control" id="exampleInputName2" placeholder="Açıklama 3">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 4</label>
                    <input type="text" asp-for="Description4" class="form-control" id="exampleInputName1" placeholder="Açıklama 4">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Harita</label>
                    <input type="text" asp-for="MapInfo" class="form-control" id="exampleInputName1" placeholder="Map">
                </div>
           
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

